#include <functional>

#include <GL/gl.h>
#include <GLFW/glfw3.h>

namespace engine
{
	class Engine
	{
		private:
			GLFWwindow *window;

			static void c_KeyCallback(GLFWwindow *window, int key, int scancode, int actions, int modes);

		protected:

			virtual void handleInput(int key, int scancode, int actions, int mods);

		public:
			Engine(GLFWwindow *window);

			void update(const float deltatime);
			void render();
	};
}
